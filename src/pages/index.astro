<Layout title="Home - Johannes Developer Blog" description="Welcome to my terminal-inspired developer blog" currentPage="home">
  <!-- Hero Section with Terminal Style -->
  <section class="section hero">
    <div class="container">
      <div class="text-center">
        <!-- Terminal Hero -->
        <div class="hero-terminal">
          <div class="terminal-header">
