---
import Layout from '../layouts/Layout.astro';
import Typography from '../components/Typography.astro';
import EnhancedCodeBlock from '../components/EnhancedCodeBlock.astro';

const identity = {
  firstName: "Johannes",
  country: "Sweden",
  occupation: "Web Developer",
  hobbies: ["coding", "terminal customization", "CSS architecture"],
};

const skills = ["HTML", "CSS", "JavaScript", "Astro", "TypeScript", "Web Development"];

const happy = true;
const finished = false;
const goal = 13;
---

<Layout title="About Me - Johannes Developer Blog" description="Learn more about Johannes, a web developer passionate about terminal aesthetics and modern CSS" currentPage="about">
  <!-- About Section -->
  <section class="section">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl font-bold mb-6">
          <span class="terminal-prompt">$</span>
          <span class="command">cat about.md</span>
        </h1>

        <div class="terminal-section my-8">
          <div class="text-left font-mono text-sm">
            <div class="mb-4">
              <span class="text-green">$</span> <span class="command">whoami</span>
            </div>
            <div class="ml-6 text-cyan mb-4">
              {identity.firstName} - {identity.occupation} from {identity.country}
            </div>

            <div class="mb-4">
              <span class="text-green">$</span> <span class="command">echo "About me"</span>
            </div>
            <div class="ml-6 text-secondary mb-6">
              <p class="mb-4">
                Hello! I'm {identity.firstName}, a passionate {identity.occupation}
                with a love for creating beautiful, functional web experiences.
                I specialize in modern web technologies and have a particular
                interest in CSS architecture and terminal-inspired design systems.
              </p>
              <p>
                This blog serves as my digital playground where I explore
                web development, share my learnings, and document my journey
                through the ever-evolving landscape of front-end development.
              </p>
            </div>

            <div class="mb-4">
              <span class="text-green">$</span> <span class="command">ls ~/hobbies/</span>
            </div>
            <div class="ml-6">
              <ul class="space-y-2">
                {identity.hobbies.map((hobby) => (
                  <li class="text-secondary flex items-center gap-2">
                    <span class="text-cyan">üìÅ</span>
                    <span>{hobby}/</span>
                  </li>
                ))}
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Skills Section -->
  <section class="section section-bg">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-bold text-center mb-8">
          <span class="terminal-prompt">$</span>
          <span class="command">cat skills.txt</span>
        </h2>

        <div class="terminal-section">
          <div class="text-left font-mono text-sm">
            <div class="mb-4">
              <span class="text-green">$</span> <span class="command">grep -r "skill" ~/tech-stack/</span>
            </div>
            <div class="ml-6">
              <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
                {skills.map((skill) => (
                  <div class="card text-center p-4">
                    <span class="text-cyan font-bold">{skill}</span>
                  </div>
                ))}
              </div>
            </div>
          </div>
        </div>

        <div class="text-center mt-8">
          {happy && (
            <Typography type="status" variant="success" size="lg">
              Happy to be learning Astro!
            </Typography>
          )}
        </div>

        <!-- Typography Components Demo -->
        <div class="mt-12">
          <Typography type="heading" level="3" size="lg">
            Enhanced Typography Components
          </Typography>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-6">
            <div class="card">
              <div class="card-header">
                <h4 class="card-title">Terminal Commands</h4>
              </div>
              <div class="card-content">
                <Typography type="terminal" variant="success">
                  git commit -m "Add typography enhancements"
                </Typography>
                <Typography type="terminal" variant="warning" class="mt-2">
                  npm run dev
                </Typography>
                <Typography type="terminal" variant="info" class="mt-2">
                  pnpm build
                </Typography>
              </div>
            </div>

            <div class="card">
              <div class="card-header">
                <h4 class="card-title">Code Example</h4>
              </div>
              <div class="card-content">
                <EnhancedCodeBlock
                  code={`// Enhanced code with syntax highlighting
function calculateReadingTime(content) {
  const wordsPerMinute = 200;
  const words = content.split(/\\s+/).length;
  const minutes = Math.ceil(words / wordsPerMinute);
  return \`\${minutes} min read\`;
}`}
                  language="javascript"
                  title="Reading Time Calculator"
                  showLineNumbers={true}
                  copyable={true}
                />
              </div>
            </div>
          </div>
        </div>

        <div class="text-center mt-8">
          {happy && (
            <Typography type="status" variant="success" size="lg">
              Happy to be learning Astro!
            </Typography>
          )}
        </div>
      </div>
    </div>
  </section>

  <!-- Status Section -->
  <section class="section">
    <div class="container">
      <div class="max-w-2xl mx-auto text-center">
        <h3 class="text-2xl font-bold mb-6">
          <span class="terminal-prompt">$</span>
          <span class="command">status</span>
        </h3>

        <div class="terminal-section">
          <div class="text-left font-mono text-sm">
            <div class="space-y-3">
              <div class="flex justify-between items-center">
                <span class="text-secondary">CSS Architecture Phase 1:</span>
                <span class="badge badge-success">‚úì Complete</span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-secondary">Learning Journey:</span>
                <span class="badge badge-info">In Progress</span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-secondary">Goal Completion:</span>
                <span class="badge badge-warning">{goal}/13 Steps</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
