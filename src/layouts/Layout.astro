---
// Main Layout Component
// Provides consistent structure and styling for all pages
import Navigation from '../components/Navigation.astro';
import LoadingScreen from '../components/LoadingScreen.astro';

interface Props {
  title: string;
  description?: string;
  currentPage?: string;
}

const { title, description, currentPage = '' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="text-optimized">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO Meta Tags -->
    <title>{title}</title>
    {description && <meta name="description" content={description} />}
    <meta name="author" content="Johannes" />
    <meta name="theme-color" content="#0d1117" />

    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content={title} />
    {description && <meta property="og:description" content={description} />}
    <meta property="og:type" content="website" />
    <meta property="og:image" content="/og-image.png" />
    <meta property="og:url" content={Astro.url} />

    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    {description && <meta name="twitter:description" content={description} />}
    <meta name="twitter:image" content="/og-image.png" />

    <!-- Optimized Font Loading -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=JetBrains+Mono:wght@300;400;500;600;700&family=Crimson+Text:ital,wght@0,400;0,600;1,400&display=swap" rel="stylesheet" />

    <!-- Preload critical CSS -->
    <link rel="preload" href="/styles/global.css" as="style" />

    <!-- Import main CSS architecture -->
    <link rel="stylesheet" href="/styles/global.css" />

    <!-- Skip link for accessibility -->
    <a href="#main-content" class="skip-link">Skip to main content</a>
  </head>

  <body class="performance-optimize">
    <!-- Loading Screen (shows on initial load only) -->
    <LoadingScreen />

    <!-- Terminal-style Navigation -->
    <Navigation currentPage={currentPage} />

    <!-- Main Content Area -->
    <main id="main-content" class="main-content" role="main">
      <slot />
    </main>

    <!-- Footer (can be added later) -->
    <footer role="contentinfo" class="no-print">
      <div class="container">
        <div class="section">
          <div class="text-center">
            <p class="text-sm text-muted terminal-text">
              <span class="terminal-prompt">$</span>
              <span>echo "Built with Astro & Terminal CSS"</span>
            </p>
          </div>
        </div>
      </div>
    </footer>

    <!-- Scripts for enhanced functionality -->
    <script>
      // Add smooth scroll behavior for anchor links
      document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
          e.preventDefault();
          const target = document.querySelector(this.getAttribute('href'));
          if (target) {
            target.scrollIntoView({
              behavior: 'smooth',
              block: 'start'
            });
          }
        });
      });

      // Performance monitoring in development
      if (window.location.hostname === 'localhost') {
        window.addEventListener('load', () => {
          const loadTime = performance.now();
          console.log(`Page loaded in ${loadTime.toFixed(2)}ms`);
        });
      }
    </script>
  </body>
</html>