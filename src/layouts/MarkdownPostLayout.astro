---
export const prerender = true;

// Enhanced Blog Post Layout with Table of Contents and Advanced Features

import Layout from './Layout.astro';
import Metadata from '../components/Metadata.astro';

interface Props {
  title: string;
  description?: string;
  pubDate: Date | string;
  updatedDate?: Date | string;
  author?: string;
  tags?: string[];
  readingTime?: string;
  wordCount?: number;
}

const {
  title,
  description,
  pubDate,
  updatedDate,
  author = 'Johannes',
  tags = [],
  readingTime,
  wordCount
} = Astro.props;

const { content } = Astro.props;

// Convert dates to Date objects with proper handling
const publishDate = pubDate ? (typeof pubDate === 'string' ? new Date(pubDate) : pubDate) : new Date();
const lastUpdated = updatedDate ? (typeof updatedDate === 'string' ? new Date(updatedDate) : updatedDate) : undefined;

// Ensure dates are valid
const safePublishDate = isNaN(publishDate.getTime()) ? new Date() : publishDate;
const safeLastUpdated = lastUpdated && !isNaN(lastUpdated.getTime()) ? lastUpdated : undefined;

// Get all posts for related posts functionality
const allPostModules = import.meta.glob('../pages/posts/*.md', { eager: true });
const allPosts = Object.values(allPostModules);
const currentPostUrl = Astro.url.pathname;

// Find related posts (posts with similar tags)
const relatedPosts = allPosts
  .filter(post => post.url !== currentPostUrl)
  .map(post => ({
    title: post.frontmatter.title,
    url: post.url,
    description: post.frontmatter.description,
    tags: post.frontmatter.tags || [],
    pubDate: new Date(post.frontmatter.pubDate)
  }))
  .sort((a, b) => {
    // Sort by number of shared tags, then by date
    const sharedTagsA = a.tags.filter(tag => tags.includes(tag)).length;
    const sharedTagsB = b.tags.filter(tag => tags.includes(tag)).length;
    if (sharedTagsA !== sharedTagsB) {
      return sharedTagsB - sharedTagsA;
    }
    return b.pubDate - a.pubDate;
  })
  .slice(0, 3); // Get top 3 related posts
---

<Layout title={title} description={description}>

  <article class="blog-post">
    <header class="post-header">
      <Metadata
        title={title}
        description={description}
        publishDate={safePublishDate}
        updatedDate={safeLastUpdated}
        author={author}
        tags={tags}
        readingTime={readingTime}
        wordCount={wordCount}
      />
    </header>

    <div class="post-layout">
      <!-- Table of Contents -->
      <aside class="post-sidebar">

        <div class="post-progress">
          <h4 class="progress-title">Reading Progress</h4>
          <div class="progress-bar">
            <div class="progress-fill" id="reading-progress"></div>
          </div>
          <div class="progress-text" id="progress-text">0%</div>
        </div>

        <div class="toc-container">
          <h3 class="toc-title">
            <span class="toc-icon">üìã</span>
            <span class="toc-text">Table of Contents</span>
          </h3>
          <nav class="toc-nav" id="table-of-contents">
            <!-- TOC will be generated by JavaScript -->
          </nav>
        </div>

      </aside>

      <!-- Main Content -->
      <main class="post-content">
        <div class="content-wrapper">
          <slot />
        </div>

        <!-- Post Actions -->
        <div class="post-actions">
          <div class="action-group">
            <h4>Share this post</h4>
            <div class="share-buttons">
              <button class="share-btn" data-platform="twitter">
                <span class="share-icon">üê¶</span>
                <span class="share-text">Twitter</span>
              </button>
              <button class="share-btn" data-platform="linkedin">
                <span class="share-icon">üíº</span>
                <span class="share-text">LinkedIn</span>
              </button>
              <button class="share-btn" data-platform="reddit">
                <span class="share-icon">ü§ñ</span>
                <span class="share-text">Reddit</span>
              </button>
            </div>
          </div>

        </div>
      </main>
    </div>

    <!-- Related Posts -->
    <section class="related-posts">
      <div class="container">
        <h3 class="related-title">
          <span class="title-prefix">$</span>
          <span class="title-text">find similar posts</span>
        </h3>
        <div class="related-grid">
          {relatedPosts.map(post => (
            <div class="related-card">
              <a href={post.url} class="related-link">
                <h4 class="related-post-title">{post.title}</h4>
                <p class="related-description">{post.description}</p>
                <div class="related-meta">
                  <span class="related-date">{post.pubDate.toLocaleDateString()}</span>
                  {post.tags.length > 0 && (
                    <div class="related-tags">
                      {post.tags.slice(0, 2).map(tag => (
                        <span class="related-tag">#{tag}</span>
                      ))}
                    </div>
                  )}
                </div>
              </a>
            </div>
          ))}
        </div>
      </div>
    </section>
  </article>
</Layout>

